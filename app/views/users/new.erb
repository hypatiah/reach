<h1> Create an account </h1>
<% if @error %>
<%= @error %>
<% end %>

<form action='/users/new' method="POST">
  Name: <input type="text" placeholder="name" name="user[name]"><br>
  Email: <input type="text" placeholder="email" name="user[email]"><br>
  Phone: <input type="text" placeholder="phone" name="user[phone]"><br>
  Password: <input type="password" placeholder="password" name="password1"><br>
  Confirm password: <input type="password" placeholder="confirm password" name="user[password]"><br>
  <input type="submit" name="register">
</form>
