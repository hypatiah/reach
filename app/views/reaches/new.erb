<h1> Make a Reach </h1>

<% if @error %>
  <%= @error %>
<% end %>

<form action='/reaches/new' method="POST">
  <label>Name of contact:</label><input type="text" name="contact_name" placeholder="Contact Name"><br>
  <label>Contact phone:</label><input type="text" name="contact_phone" placeholder="+12345678901"><br>
  <label>Text:</label><br>
  <textarea name="text" placeholder="Write your text message here" rows="5"></textarea><br>
  <label>Label:</label> <input type="text" name="label" placeholder="Reach description"><br>
  <input type="checkbox" name="main_reach">Set as main Reach <br>
  <input type="submit" value="Create">
</form>
